<%- include("header") %> 
    log in
    <form action='/login' method='post'>
        <input name='username' type='text' placeholder='username'>
        <% if (missing == 1) { %>
            <p class="alert">Missing username.</p>
        <% } %>
        <input name='password' type='password' placeholder='password'>
        <% if (missing == 2) { %>
            <p class="alert">Missing password.</p>
        <% } %>
        <button>Submit</button>
    </form>
    <% if (error == 1) { %>
        <p class="alert">Something went wrong. Please try again.</p>
    <% } else if (error == 2) { %>
        <p class="alert">Username and password not found.</p>
    <% } %>
     
<%- include("footer") %>
